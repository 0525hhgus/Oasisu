<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Tower1Fragment"
    android:background="@color/white"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6BFFF2F2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/roomTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/dosmyungjo"
            android:padding="20dp"
            android:text="OO의 방"
            android:textAlignment="center"
            android:textSize="30dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/emotionImageRoom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/ic_dashboard_black_24dp" />

            <TextView
                android:id="@+id/emotionCountRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dosmyungjo"
                android:text="00/20"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/roomBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="110dp"
            android:background="@drawable/room0">


            <ImageView
                android:id="@+id/characterImage"
                android:layout_width="120dp"
                android:layout_height="132dp"
                android:src="@drawable/character_move"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.945"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.935" />

            <ImageView
                android:id="@+id/total1"
                android:layout_width="78dp"
                android:layout_height="133dp"
                android:src="@drawable/total1"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.048"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.851" />

            <ImageView
                android:id="@+id/total2"
                android:visibility="invisible"
                android:layout_width="160dp"
                android:layout_height="83dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/total2"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="94dp" />

            <ImageView
                android:id="@+id/total3"
                android:visibility="invisible"
                android:layout_width="137dp"
                android:layout_height="91dp"
                android:src="@drawable/total3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.689"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.386" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</FrameLayout>